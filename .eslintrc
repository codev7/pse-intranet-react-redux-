{
  "parser"  : "babel-eslint",
  "extends" : [
    "standard",
    "standard-react"
  ],
  "plugins" : [
    "babel",
    "react",
    "promise"
  ],
  "env"     : {
    "browser" : true
  },
  "globals" : {
    "Action"       : false,
    "__DEV__"      : false,
    "__PROD__"     : false,
    "__DEBUG__"    : false,
    "__DEBUG_NEW_WINDOW__" : false,
    "__BASENAME__" : false,
    "__COVERAGE__" : false
  },
  "rules": {
    "key-spacing"          : 0,
    "object-curly-spacing" : [1, "always"],
    "space-before-function-paren" : 0,
    "no-trailing-spaces": 0,
    "spaced-comment": 0,
    "no-unused-vars": 0,
    "one-var": 0,
    "react/jsx-no-bind": 0,
    "padded-blocks": 0,
    "keyword-spacing": 1,
    "jsx-quotes": 1,
    "jsx-indent-props": 1,
    "react/jsx-indent-props": 1,
    "eqeqeq": 0
  }
}
